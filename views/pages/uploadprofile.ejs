<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/header %>
    <div class="container">
        <div id="profile">
            <div id="title">
                <h2>Cập nhật thông tin cá nhân</h2>
            </div>
            <div class="profile-header">
                <div id="avatar"><img src="../images/avatar.jpg" alt="avatar"></div>
                <div id="avatar-edit"><i class="fas fa-pencil-alt"></i></div>
            </div>
            <form action="/users/edit?_method=PUT" class="profile-edit-form" method="POST">
                <div id="profile-edit-content">
                    <div style="text-align: center; color: white; font-size: 24px; background-color: red;">
                        <% include ../partials/messages %>
                    </div>
                    <div id="profile-input-top">
                        <div class="col-profile">
                            <div class="form-group">
                                <label for="full_name">Họ và tên <span class="required-text">*</span></label>
                                <input name="full_name" id="full-name" type="text" value="<%= user.full_name %>">
                            </div>
                            <div class="form-group">
                                <label for="phone_number">Số điện thoại <span class="required-text">*</span></label>
                                <input name="phone_number" id="phone-number" type="text" placeholder="Số điện thoại"
                                    value="<%= user.phone_number %>">
                            </div>
                            <div class="form-group">
                                <label for="birthday">Ngày sinh <span class="required-text">*</span></label>
                                <input name="birthday" class="date" id="birthday" type="date" placeholder="dd/mm/yy"
                                    value="<%= user.birthday %>">
                            </div>
                        </div>
                        <div class="col-profile">
                            <div class="form-group">
                                <label for="display_name">Tên hiển thị <span class="required-text">*</span></label>
                                <input name="display_name" id="display-name" type="text"
                                    value="<%= user.display_name %>">
                            </div>
                            <div class="form-group">
                                <label for="email">Email <span class="required-text">*</span></label>
                                <input name="email" id="email" type="email" value="<%= user.email %>" disabled>
                            </div>
                            <div class="form-group">
                                <label for="birthday">Giới tính <span class="required-text">*</span></label>
                                <select name="gender" id="gender">
                                    <option hidden>Giới tính</option>
                                    <option value="male">Nam</option>
                                    <option value="female">Nữ</option>
                                    <option value="other">Khác</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div id="profile-input-mid">
                        <div class="form-group">
                            <label for="profile_title">Tiêu đề <span class="required-text">*</span></label>
                            <input name="title" id="profile-title" type="text" placeholder="Tiêu đề">
                        </div>
                    </div>
                    <div id="profile-input-bottom">
                        <div class="form-group">
                            <label for="address">Địa chỉ <span class="required-text">*</span></label>
                            <select name="city">
                                <option>Thành phố</option>
                                <option value="ho-chi-minh" selected>Hồ Chí Minh</option>
                            </select>
                            <select name="district" id="district">
                                <option>Quận</option>
                                <option value="8" selected>Quận 8</option>
                            </select>
                            <select name="ward" id="ward">
                                <option>Phường</option>
                                <option value="2" selected>Phường 2</option>
                            </select>
                            <input type="text" placeholder="Địa chỉ" id="street" name="address">
                        </div>
                        <div class="form-group">
                            <label for="card_id">Chứng minh nhân dân <span class="required-text">*</span> <i
                                    class="fas fa-exclamation-circle"></i></label>
                            <input name="card_id" id="card-id" type="text" placeholder="Số chứng minh nhân dân">
                            <input name="date_card" id="card-id" type="date" class="date" placeholder="dd/mm/yy">
                        </div>
                        <div class="form-group">
                            <label for="career">Nghề nghiệp <span class="required-text">*</span></label>
                            <select name="career" id="career">
                                <option>Chọn nghề bạn muốn</option>
                                <option value="lao-dong-pho-thong">Lao động phổ thông</option>
                                <option value="lap-trinh-vien">Lập trình viên</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div id="profile-save">
                    <button class="btn btn-primary btn-large">Lưu lại</button>
                </div>
            </form>
        </div>
    </div>
    <script src="js/boundaries.js" type="text/javascript"></script>
    <% include ../partials/footer %>
</body>

</html>
